generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Continente {
  id        Int      @id @default(autoincrement())
  nome      String   @unique @db.VarChar(50)
  paises    Pais[]  

  @@map("continentes")
}

model Pais {
  id             Int      @id @default(autoincrement())
  nome           String   @db.VarChar(60)
  descricao      String?
  idiomaOficial  String   @db.VarChar(30)
  moeda          String   @db.VarChar(20)
  populacao      BigInt?
  area           Float?
  bandeiraPng    String?
  continenteId   Int
  continente     Continente @relation(fields: [continenteId], references: [id], onDelete: Cascade)
  cidades        Cidade[]  

  @@map("paises") 
}

model Cidade {
  id        Int      @id @default(autoincrement())  
  nome      String   @db.VarChar(60)
  populacao BigInt?
  latitude  Float?
  longitude Float?
  paisId    Int
  pais      Pais @relation(fields: [paisId], references: [id], onDelete: Cascade) 

  @@map("cidades")
}