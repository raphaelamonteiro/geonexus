// backend/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")  // ‚Üê ESTA LINHA VOLTA NO PRISMA 5.0
}

model Continent {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  countries Country[]
  
  @@map("continents")
}

model Country {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  code        String   @unique
  continentId Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  continent   Continent @relation(fields: [continentId], references: [id], onDelete: Cascade)
  cities      City[]
  
  @@map("countries")
}

model City {
  id        Int      @id @default(autoincrement())
  name      String
  countryId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  country   Country  @relation(fields: [countryId], references: [id], onDelete: Cascade)
  
  @@map("cities")
}