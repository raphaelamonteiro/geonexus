{
  "compilerOptions": {
    "target": "ES2020",                      // Linguagem moderna
    "module": "CommonJS",                    // Módulo padrão para Node
    "lib": ["ES2020"],                       // Funções modernas do JS
    "rootDir": "./src",                      // Onde está seu código
    "outDir": "./dist",                      // Para onde vai o código compilado
    "esModuleInterop": true,                 // Permite 'import express from "express"'
    "strict": true,                          // Tipagem segura
    "moduleResolution": "Node",              // Resolve módulos como o Node resolve
    "resolveJsonModule": true,               // Permite importar arquivos .json
    "skipLibCheck": true,                    // Evita erros em libs externas
    "types": ["node"],                       // Habilita tipos do Node (fs, path, etc.)
    "forceConsistentCasingInFileNames": true // Evita erros bobos de maiúsc/minúscula
  },

  "include": ["src"],
  "exclude": ["node_modules"]
  
}
