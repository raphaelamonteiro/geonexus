generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Continent {
  id        Int      @id @default(autoincrement())
  name      String
  description String?

  countries Country[]  // 1 continente -> vários países
}

model Country {
  id          Int       @id @default(autoincrement())
  name        String
  population  Int
  language    String
  currency    String

  continentId Int
  continent   Continent @relation(fields: [continentId], references: [id])

  cities      City[]     // 1 país -> várias cidades
}

model City {
  id         Int      @id @default(autoincrement())
  name       String
  population Int
  latitude   Float
  longitude  Float

  countryId  Int
  country    Country @relation(fields: [countryId], references: [id])
}

model FavoriteCountry {
  id        Int      @id @default(autoincrement())
  code      String
  name      String
  continent String?
  city      String?
  note      String?
  createdAt DateTime @default(now())
}
